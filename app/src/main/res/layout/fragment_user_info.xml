<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.jung.a2017termproject.UserInfoFragment"
        android:weightSum="1">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/textView7"
                android:layout_width="190dp"
                android:layout_height="75dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/real"
                android:textSize="30dp"/>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="190dp"
                android:layout_height="75dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/real2"
                android:onClick="goAdditionalUserInfo" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            android:gravity="center">


            <TextView
                android:id="@+id/imageButton2"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:onClick="GoAddIngredient"
                android:scaleType="centerCrop"
                android:text="TO ADD A NEW INGREDIENT,
CLICK PLUS BUTTON"
                android:textSize="20dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="17dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sample1_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_marginStart="64dp"
                android:onClick="goIngredientDetail_1"
                android:text="ingredient1image+ingredient1index" />

            <Button
                android:id="@+id/sample2_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/sample1_button"
                android:layout_alignBottom="@+id/sample1_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="66dp"
                android:layout_marginRight="66dp"
                android:layout_weight="1"
                android:onClick="goIngredientDetail_1"
                android:text="ingredient2image+ingredient2index" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">


            <Button
                android:id="@+id/sample3_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_marginStart="64dp"
                android:onClick="goIngredientDetail_1"
                android:text="ingredient3image+ingredient3index" />

            <Button
                android:id="@+id/sample4_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/sample3_button"
                android:layout_alignBottom="@+id/sample3_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="66dp"
                android:layout_marginRight="66dp"
                android:layout_weight="1"
                android:onClick="goIngredientDetail_1"
                android:text="ingredient4image+ingredient4index" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sample5_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_marginStart="64dp"
                android:onClick="goIngredientDetail_1"
                android:text="ingredient5image+ingredient5index" />

            <Button
                android:id="@+id/sample6_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/sample5_button"
                android:layout_alignBottom="@+id/sample5_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="66dp"
                android:layout_marginRight="66dp"
                android:layout_weight="1"
                android:text="ingredient6image+ingredient6index" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/sample7_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:layout_marginStart="64dp"
                android:text="ingredient7image+ingredient7index" />

            <Button
                android:id="@+id/sample8_button"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/sample7_button"
                android:layout_alignBottom="@+id/sample7_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="66dp"
                android:layout_marginRight="66dp"
                android:layout_weight="1"
                android:text="ingredient8image+ingredient8index" />

        </RelativeLayout>



    </LinearLayout>
</ScrollView>
