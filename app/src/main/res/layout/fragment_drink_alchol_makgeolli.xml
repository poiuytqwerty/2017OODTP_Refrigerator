<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jung.a2017termproject.drink_alchol_makgeolli">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="　　　　　　　　　　　　　　　　　　　　
MAKGEOLLI RECIPE"
                android:textSize = "20dp"
                android:gravity="top|center"
                android:background="@drawable/pic000"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:weightSum="1"
                android:background="@drawable/backg88">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:text="두부김치"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/button1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:onClick="goMakgeolli_Recipe"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/tofukimchi" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:gravity="center"
                        android:text="1. 두부
2. 김치"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@drawable/backg88">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="소라무침"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/button2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:onClick="goMakgeolli_Recipe"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/soramuchim" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:gravity="center"
                        android:text="1. 자숙참소라
2. 소면
3. 파채
4. 양파"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@drawable/backg88">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="깻잎전"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/button3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:onClick="goMakgeolli_Recipe"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sesamejeon" />


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:gravity="center"
                        android:text="1. 돼지고기
2. 두부
3. 양파
4. 깻잎
5. 달걀
6. 당근
7. 청양고추"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>