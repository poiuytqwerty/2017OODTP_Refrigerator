<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="　　　　　　　　　　　　　　　　　　　　
ADD NEW SHOPPING LIST"
        android:textSize = "20dp"
        android:gravity="top|center"
        android:background="@drawable/pic000"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredientname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="재료이름"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/shoppingingredientnameinput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ingredientname"
            android:layout_alignBottom="@+id/ingredientname"
            android:layout_toEndOf="@+id/ingredientname"
            android:layout_toRightOf="@+id/ingredientname"
            android:paddingLeft="100dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numberOfIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="개수"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/shoppingingredientcountinput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_toEndOf="@+id/numberOfIngredient"
            android:layout_toRightOf="@+id/numberOfIngredient"
            android:paddingLeft="100dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addShopping_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/plus2"
            android:onClick="addShoppingBtn" />


    </RelativeLayout>
</LinearLayout>
