<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.jung.a2017termproject.recommend_recipe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="REICPE RECOMENDATION"
            android:textSize = "20dp"
            android:gravity="top|center"
            android:background="@drawable/pic000"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="RECOMMENDATION WITH
HEALTH STATUS OR MY STOCK
--------------------------------------------------------------------------" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/healthBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="57dp"
                android:layout_marginStart="57dp"
                android:background="@drawable/health"
                android:onClick="goHealth"
                android:textSize="30dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="HEALTH"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="131dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <Button
                android:id="@+id/stockBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/stock"
                android:onClick="goStock"
                android:layout_marginLeft="58dp"
                android:layout_marginStart="58dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="STOCK"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="131dp" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>